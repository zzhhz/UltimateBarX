<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <Button
                android:id="@+id/btnTransparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="transparent"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="switch (Activity)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnSwitch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="switch (Fragment)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnViewPager2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="viewpager (apply to Activity)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="viewpager (apply to Fragment)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="scroll"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="drawerlayout"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnRecyclerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fragment RecyclerView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnFragmentStack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fragment Stack"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Add Padding"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnCoordinator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CoordinatorLayout"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnBottonNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BottomNavigationView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnAdjustResize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AdjustResize"
                android:textAllCaps="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>